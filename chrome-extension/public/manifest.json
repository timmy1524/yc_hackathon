{
  "manifest_version": 3,
  "name": "LinkedIn AI Assistant",
  "version": "0.0.1",
  "description": "AI-powered LinkedIn automation assistant",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["src/content/linkedin.ts", "src/content/sidebar-injector.ts", "src/content/profile-injector.ts"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Toggle LinkedIn AI Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/sidebar/index.html", "src/sidebar/*", "assets/*", "*.js", "*.css", "*.ts", "*.tsx"],
      "matches": ["*://www.linkedin.com/*"]
    }
  ]
}